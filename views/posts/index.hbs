<h1 style = " color:#ffffff;text-shadow: 8px 8px 16px #f08fbf; ">Flamingo Lingo</h1>

{{#each posts}}
  <div style = "padding: 20px" class="posts">
  <div><b>{{this.posterName}}:</b> 
   {{this.message}}
    <button style="padding: 6px; background-color: #f08fbf; border-radius: 8px;"
  id="btn" class="btnclick" onclick="CountLikes(this);" type="button" > <b id="display">0 </b> Likes &#128077;
   </button></div>
    <script type="text/javascript">
        var count = 0;
        function CountLikes(element) {
          element.getElementsByTagName('b')[0].innerText++
        console.log(element)
        }
    </script>
    <br>
    <br>
    <div class="comments">
      {{#each this.comments}}
      {{this.user}}: {{this.comment}} - {{this.datetime}}<br>
      {{/each}}
    </div>
    <div class="add-comments">
      <form action="posts/comment/new" method="post" id="comment-form">
        <input type="text" name="comment" id="comment">
        <input type="hidden" name="postid" value="{{this._id}}">
        <input type="submit">
      </form>
    </div>
    <br>
  </div>
  <br>
{{/each}}


<a class="new-post-link" href="/posts/new">New post</a>
