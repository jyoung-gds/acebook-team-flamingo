<h1>Timeline</h1>
{{#each posts}}
  <div class="posts">
    {{this.message}} <button type="button" class="like-button">Like &#128077;</button>
    <br>
    <br>
    <div class="comments">
      {{#each this.comments}}
      {{this.user}}: {{this.comment}} - {{this.datetime}}<br>
      {{/each}}
    </div>
    <div class="add-comments">
      <form action="posts/comment/new" method="post" id="comment-form">
        <input type="text" name="comment" id="comment">
        <input type="hidden" name="postid" value="{{this._id}}">
        <input type="submit">
      </form>
    </div>
    <br>
  </div>
  <br>
{{/each}}

<a class="new-post-link" href="/posts/new">New post</a>
